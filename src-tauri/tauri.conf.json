{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DesQTA",
  "version": "0.1.0",
  "identifier": "com.desqta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "DesQTA",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "decorations": false,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
      "schemes": ["desqta"]
      }
    }
  }
}